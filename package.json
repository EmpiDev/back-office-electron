{
    "name": "mon-projet-electron-react",
    "version": "0.1.0",
    "description": "Mon application Electron React",
    "private": true,
    "main": "electron/main.js",
    "scripts": {
        "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
        "dev:electron": "electron .",
        "dev:renderer": "cd renderer && npm run dev",
        "build:renderer": "cd renderer && npm run build",
        "start": "electron .",
        "build": "npm run build:renderer && electron-builder",
        "build:win": "npm run build:renderer && electron-builder --win",
        "build:mac": "npm run build:renderer && electron-builder --mac",
        "build:linux": "npm run build:renderer && electron-builder --linux",
        "postinstall": "electron-builder install-app-deps"
    },
    "devDependencies": {
        "concurrently": "^9.0.0",
        "electron": "^39.2.6",
        "electron-builder": "^26.0.12"
    },
    "dependencies": {
        "sqlite3": "^5.1.7"
    },
    "build": {
        "appId": "com.electron.react.app",
        "productName": "Mon Projet Electron",
        "directories": {
            "output": "dist"
        },
        "files": [
            "electron/**/*",
            "renderer/dist/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis",
            "signAndEditExecutable": false
        }
    }
}